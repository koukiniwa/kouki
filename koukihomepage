  <script>
    // DOMが完全に読み込まれてから実行
    document.addEventListener('DOMContentLoaded', function() {
      // 質問送信機能
      window.submitQuestion = function() {
        const nameElement = document.getElementById('questionName');
        const contentElement = document.getElementById('questionContent');
        
        if (!nameElement || !contentElement) {
          console.error('フォーム要素が見つかりません');
          return;
        }
        
        const name = nameElement.value.trim();
        const content = contentElement.value.trim();
        
        if (!name || !content) {
          alert('お名前と質問内容を入力してください！');
          return;
        }
        
        // 実際のサイトでは、ここでサーバーに送信する処理を行います
        alert(name + 'さん、質問をありがとうございます！\n\n「' + content + '」\n\n後日回答させていただきます！');
        
        // フォームをリセット
        nameElement.value = '';
        contentElement.value = '';
      };
      
      // 質問一覧の回答表示切り替え機能
      window.toggleAnswer = function(element) {
        const answer = element.querySelector('.question-answer');
        const isCurrentlyVisible = answer.classList.contains('show');
        
        // 他の質問の回答を閉じる
        const allAnswers = document.querySelectorAll('.question-answer');
        const allItems = document.querySelectorAll('.question-list-item');
        allAnswers.forEach(ans => ans.classList.remove('show'));
        allItems.forEach(item => item.classList.remove('active'));
        
        // クリックされた質問の回答を切り替え
        if (!isCurrentlyVisible) {
          answer.classList.add('show');
          element.classList.add('active');
        }
      };
      
      // エンターキーでの送信（Shift+Enterで改行）
      const contentTextarea = document.getElementById('questionContent');
      if (contentTextarea) {
        contentTextarea.addEventListener('keydown', function(e) {
          if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            window.submitQuestion();
          }
        });
      }
    });
  </script>
